mixin addphoto(photos)

    form#addPhotoForm(action="/gallery/" method="POST")

        h3.formField Add Photo:

        #titleInput.formField

            input(type='text' name='title' placeholder=' title')

        #linkInput.formField

            input(type='text' name='url' placeholder=' link')

        #descriptionInput.formField

            input(type='text' name='description' placeholder=' description')

        .formField

            button Create